<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/part_best"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/content_wishing"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:gravity="center|right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatImageView
            android:scaleType="centerCrop"
            android:src="@drawable/ic_action_best"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <android.support.v7.widget.AppCompatImageView
            android:src="@drawable/ic_action_best_zh_cn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        app:cardCornerRadius="10dp"
        app:elevation="5dp"
        android:layout_margin="6dp">

        <LinearLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/part_user_best"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/headPic_best"
                        android:src="@drawable/ic_action_person"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.3"/>

                    <android.support.v7.widget.AppCompatTextView

                        android:id="@+id/user_best"
                        android:gravity="center|left"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:text="User"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="right|center"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent">

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView

                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:id="@+id/preview_best"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background"
                android:text="Come true..."/>

            <android.support.v7.widget.AppCompatImageView
                android:layout_margin="26dp"
                android:id="@+id/picture_best"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/date_best"
                android:layout_margin="10dp"
                android:gravity="center|right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Date"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>